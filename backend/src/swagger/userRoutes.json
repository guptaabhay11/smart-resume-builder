{
    "/users/register": {
      "post": {
        "summary": "Register a new user",
        "operationId": "createUser",
        "tags": ["User"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "description": "User registration data",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string", "example": "abhay" },
                  "email": { "type": "string", "example": "xyz@gmail.com" },
                  "password": { "type": "string", "example": "abhay" },
                  "role": {
                    "type": "string",
                    "enum": ["USER", "ADMIN"],
                    "example": "USER"
                  }
                },
                "required": ["name", "email", "password", "role"]
              },
              "example": {
                "name": "abhay",
                "email": "xyz@gmail.com",
                "password": "abhay",
                "role": "USER"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string" },
                    "data": { "type": "object" }
                  },
                  "example": {
                    "message": "User created successfully",
                    "data": {
                      "_id": "603d9c207f9b4b1f3b10b0e9",
                      "name": "abhay",
                      "email": "xyz@gmail.com",
                      "role": "USER"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "User already exists or invalid data",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string" },
                    "example": {
                      "message": "User already exists"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/login": {
      "post": {
        "summary": "Login a user",
        "operationId": "loginUser",
        "tags": ["User"],
        "requestBody": {
          "description": "User login credentials",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string", "example": "xyz@gmail.com" },
                  "password": { "type": "string", "example": "abhay" }
                },
                "required": ["email", "password"]
              },
              "example": {
                "email": "xyz@gmail.com",
                "password": "abhay"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "accessToken": {
                      "type": "string",
                      "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJzdWIiOiIxMjM0NTY3ODkwIiwibmFtZSI6IkpvaG4gRG9lIiwiaWF0IjoxNTE2MjM5MDIyfQ"
                    },
                    "refreshToken": {
                      "type": "string",
                      "example": "d2FsY19yZWZyZXNoX3Rva2Vu"
                    },
                    "message": { "type": "string", "example": "Login successful" }
                  },
                  "example": {
                    "accessToken": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJzdWIiOiIxMjM0NTY3ODkwIiwibmFtZSI6IkpvaG4gRG9lIiwiaWF0IjoxNTE2MjM5MDIyfQ",
                    "refreshToken": "d2FsY19yZWZyZXNoX3Rva2Vu",
                    "message": "Login successful"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid credentials or unverified user",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Invalid email or password"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },

    "components": {
      "securitySchemes": {
        "bearerAuth": {
          "type": "http",
          "scheme": "bearer",
          "bearerFormat": "JWT"
        }
      }
    }
  }